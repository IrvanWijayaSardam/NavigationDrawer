<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--    Nama-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#BAB7AC"
                >
                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_person"
                    />

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/ivProfile"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Charlie Putin"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNama"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/ivProfile"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Member Platinum"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </RelativeLayout>
            <!--    Saldo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:backgroundTint="#B1A1A1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="28dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="170dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/money"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinsbold"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="90dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 500,000"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinssemibold"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:backgroundTint="#B1A1A1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="170dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/voucher"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voucher"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinsbold"
                        />
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="90dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinssemibold"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!--    Aktivitas Saya-->
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akivitas Saya"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryText"
                    android:fontFamily="@font/poppinsregular"
                    />
                <ImageView
                    android:layout_gravity="center_horizontal"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_right"
                    />
            </LinearLayout>
            <!-- Isi Aktivitas Saya-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/topup"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Daftar Transaksi"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heart"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Wishlist"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/wishlist"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Ulasan"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--Pusat Bantuan-->
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pusat Bantuan"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryText"
                    android:fontFamily="@font/poppinsregular"
                    />
                <ImageView
                    android:layout_gravity="center_horizontal"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_right"
                    />
            </LinearLayout>
            <!--        Isi Pusat Bantuan-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"

                >
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/complain"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Pesanan Di Complaint"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>